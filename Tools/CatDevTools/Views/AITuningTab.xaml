<UserControl x:Class="CatDevTools.Views.AITuningTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <StackPanel Margin="0,0,0,16">
        <!-- 상단: 모델 관리 -->
        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Ollama 모델 관리" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,16"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 서버 상태 -->
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="{StaticResource DangerBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOllamaRunning}" Value="True">
                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding OllamaStatus}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Grid.Column="1" Content="새로고침"
                            Command="{Binding RefreshModelsCommand}"
                            Padding="12,6" Background="{StaticResource SubTextBrush}"
                            Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </Grid>

                <Separator Margin="0,16"/>

                <!-- 모델 선택 -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="현재 모델:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding OllamaModels}"
                              SelectedItem="{Binding SelectedModel}"
                              DisplayMemberPath="Name"
                              Margin="8,0"/>
                    <Button Grid.Column="2" Content="적용"
                            Command="{Binding ApplyModelCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </Grid>

                <!-- 모델 다운로드 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="모델 다운로드:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding NewModelName, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             Margin="8,0"/>
                    <Button Grid.Column="2" Content="다운로드"
                            Command="{Binding DownloadModelCommand}"
                            IsEnabled="{Binding CanDownload}"
                            Style="{StaticResource PrimaryButton}"/>
                </Grid>

                <!-- 다운로드 진행률 -->
                <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibility}}"
                            Margin="0,16,0,0">
                    <TextBlock Text="{Binding DownloadStatus}" Margin="0,0,0,4"/>
                    <ProgressBar Value="{Binding DownloadProgress}" Maximum="100" Height="8"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 중단: 테스트 및 설정 -->
        <Grid Height="350">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: 프롬프트 테스트 -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="프롬프트 테스트" FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>

                    <TextBox Grid.Row="1"
                             Text="{Binding TestPrompt, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,8"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="테스트 실행"
                                Command="{Binding RunTestCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TestStatus}" VerticalAlignment="Center"
                                   Foreground="{StaticResource SubTextBrush}"/>
                    </StackPanel>

                    <Border Grid.Row="3" Background="#F8F8F8" CornerRadius="6" Padding="12">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding TestResult}" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- 오른쪽: LoRA 데이터셋 생성 -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="LoRA 데이터셋 생성" FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,12"/>

                    <TextBlock Text="대화 로그 → Chat 형식 JSONL 변환"
                               Foreground="{StaticResource SubTextBrush}" Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="로그 폴더:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding DatasetLogFolder}"
                                 IsReadOnly="True" Background="#F0F0F0"/>
                    </Grid>

                    <CheckBox Content="영어 포함 응답 제외"
                              IsChecked="{Binding DatasetExcludeEnglish}"
                              Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Button Content="폴더 선택"
                                Command="{Binding SelectDatasetFolderCommand}"
                                Padding="12,6" Margin="0,0,8,0"
                                Background="{StaticResource SubTextBrush}"
                                Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="dataset.jsonl 생성"
                                Command="{Binding ExportDatasetCommand}"
                                Style="{StaticResource PrimaryButton}"
                                IsEnabled="{Binding IsExportingDataset, Converter={StaticResource InvertBool}}"/>
                    </StackPanel>

                    <!-- 생성 결과 -->
                    <Border Background="#F8F8F8" CornerRadius="6" Padding="12" MinHeight="120">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                            <TextBlock Text="{Binding DatasetResult}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
                        </ScrollViewer>
                    </Border>

                    <Separator Margin="0,12"/>

                    <!-- 추천 모델 -->
                    <TextBlock Text="추천 모델 (한국어)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBlock Text="• aya:8b - 다국어 (권장)" Margin="0,1" FontSize="11"/>
                    <TextBlock Text="• gemma2:9b - 균형" Margin="0,1" FontSize="11"/>
                    <TextBlock Text="• qwen2.5:7b - 아시아 언어" Margin="0,1" FontSize="11"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- LoRA 튜닝 가이드 -->
        <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
            <StackPanel>
                <TextBlock Text="LoRA 튜닝 가이드" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,16"/>

                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource SubTextBrush}" Margin="0,0,0,12">
                    <Run FontWeight="SemiBold" Foreground="{StaticResource TextBrush}">LoRA란?</Run>
                    <LineBreak/>
                    대형 언어 모델을 특정 캐릭터/스타일로 미세조정하는 기법입니다.
                    전체 모델을 재학습하지 않고 작은 어댑터만 학습해서 효율적입니다.
                </TextBlock>

                <TextBlock Text="학습 데이터 추출 방법" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="1. 게임 플레이하며 고양이와 대화 (로그 자동 저장)" Margin="0,2"/>
                    <TextBlock Text="2. 로그 폴더 선택: %AppData%\..\LocalLow\...\CatLogs" Margin="0,2"/>
                    <TextBlock Text="3. 'JSONL 생성' 클릭 → training_data.jsonl 생성" Margin="0,2"/>
                </StackPanel>

                <TextBlock Text="LoRA 학습 (Ollama)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <Border Background="#2D2D2D" CornerRadius="4" Padding="12" Margin="0,0,0,12">
                    <TextBlock Foreground="#E0E0E0" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap">
                        <Run Foreground="#9CDCFE"># 1. Modelfile 작성</Run><LineBreak/>
                        FROM aya:8b<LineBreak/>
                        SYSTEM "당신은 망고라는 고양이입니다..."<LineBreak/><LineBreak/>
                        <Run Foreground="#9CDCFE"># 2. 커스텀 모델 생성</Run><LineBreak/>
                        ollama create mango-cat -f Modelfile
                    </TextBlock>
                </Border>

                <TextBlock Text="고급: Unsloth로 LoRA 학습" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <StackPanel>
                    <TextBlock Text="• Python + Unsloth 라이브러리 사용" Margin="0,2"/>
                    <TextBlock Text="• training_data_extended.jsonl로 학습" Margin="0,2"/>
                    <TextBlock Text="• 학습 후 GGUF 변환 → Ollama 임포트" Margin="0,2"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 하단: 고양이다움 벤치마크 -->
        <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="고양이다움 벤치마크" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text=" (5점 만점 × 5개 지표 = 25점)" VerticalAlignment="Bottom"
                               Foreground="{StaticResource SubTextBrush}" FontSize="12" Margin="8,0,0,4"/>
                </StackPanel>

                <!-- 벤치마크 컨트롤 -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16">
                    <!-- 모델 추가 행 -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="모델 추가:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding OllamaModels}"
                                  SelectedItem="{Binding BenchmarkModelToAdd}"
                                  DisplayMemberPath="Name"
                                  VerticalContentAlignment="Center"/>
                        <Button Grid.Column="2" Content="+ 추가"
                                Command="{Binding AddBenchmarkModelCommand}"
                                Padding="12,6" Margin="8,0,0,0"
                                Background="{StaticResource SuccessBrush}"
                                Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        <TextBlock Grid.Column="4" Text="{Binding BenchmarkStatus}"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource SubTextBrush}"/>
                    </Grid>

                    <!-- 선택된 모델 태그들 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="테스트 모델:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding SelectedBenchmarkModels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E8F4FD" CornerRadius="4"
                                            Margin="0,0,6,6" Padding="8,4">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"
                                                       Foreground="#1976D2" FontWeight="SemiBold"/>
                                            <Button Content="✕"
                                                    Command="{Binding DataContext.RemoveBenchmarkModelCommand,
                                                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" BorderThickness="0"
                                                    Foreground="#1976D2" FontSize="12"
                                                    Margin="6,0,0,0" Padding="2,0"
                                                    Cursor="Hand" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Grid.Column="2" Content="벤치마크 실행"
                                Command="{Binding RunCatBenchmarkCommand}"
                                Style="{StaticResource PrimaryButton}"
                                IsEnabled="{Binding CanRunBenchmark}"/>
                    </Grid>
                </StackPanel>

                <!-- 점수표 결과 -->
                <Border Grid.Row="2" Background="#F8F8F8" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                        Visibility="{Binding HasBenchmarkResults, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="랭킹 결과" FontWeight="SemiBold" VerticalAlignment="Center"/>

                            <CheckBox Grid.Column="2" Content="자동 저장"
                                      IsChecked="{Binding AutoExportBenchmark}"
                                      VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <Button Grid.Column="3" Content="Export"
                                    Command="{Binding ExportBenchmarkResultsCommand}"
                                    Padding="10,4" Margin="0,0,8,0"
                                    Background="#4A90D9"
                                    Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            <Button Grid.Column="4" Content="폴더 열기"
                                    Command="{Binding OpenBenchmarkExportFolderCommand}"
                                    Padding="10,4"
                                    Background="{StaticResource SubTextBrush}"
                                    Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        </Grid>
                        <DataGrid ItemsSource="{Binding BenchmarkRankings}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  Height="120"
                                  FontSize="12">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="순위" Binding="{Binding Rank}" Width="50"/>
                                <DataGridTextColumn Header="모델" Binding="{Binding ModelName}" Width="120"/>
                                <DataGridTextColumn Header="총점" Binding="{Binding TotalScore, StringFormat=F1}" Width="60"/>
                                <DataGridTextColumn Header="등급" Binding="{Binding Grade}" Width="50"/>
                                <DataGridTextColumn Header="Control" Binding="{Binding ControlScore, StringFormat=F1}" Width="60"/>
                                <DataGridTextColumn Header="상태반영" Binding="{Binding StateScore, StringFormat=F1}" Width="60"/>
                                <DataGridTextColumn Header="나이말투" Binding="{Binding AgeScore, StringFormat=F1}" Width="60"/>
                                <DataGridTextColumn Header="호감도" Binding="{Binding AffectionScore, StringFormat=F1}" Width="60"/>
                                <DataGridTextColumn Header="일관성" Binding="{Binding ConsistencyScore, StringFormat=F1}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- 벤치마크 차트 -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 지표별 점수 차트 -->
                    <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="6" Margin="0,0,8,0" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="지표별 점수 (0~5)" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <lvc:CartesianChart Grid.Row="1"
                                                Series="{Binding BenchmarkScoreSeries}"
                                                XAxes="{Binding BenchmarkMetricAxis}"
                                                YAxes="{Binding BenchmarkScoreAxis}"
                                                TooltipPosition="Top"/>
                        </Grid>
                    </Border>

                    <!-- 총점 비교 차트 -->
                    <Border Grid.Column="1" Background="#FAFAFA" CornerRadius="6" Margin="8,0,0,0" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="총점 비교 (0~25)" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <lvc:CartesianChart Grid.Row="1"
                                                Series="{Binding BenchmarkTotalSeries}"
                                                XAxes="{Binding BenchmarkModelAxis}"
                                                YAxes="{Binding BenchmarkTotalAxis}"
                                                TooltipPosition="Top"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Ollama 로그 -->
        <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="220"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Ollama 로그" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding OllamaLogFolder}"
                               Foreground="{StaticResource SubTextBrush}" Margin="12,0,0,0"
                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    <Button Grid.Column="2" Content="폴더 열기"
                            Command="{Binding OpenOllamaLogFolderCommand}"
                            Padding="12,6" Margin="0,0,8,0"
                            Background="{StaticResource SubTextBrush}"
                            Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    <Button Grid.Column="3" Content="비우기"
                            Command="{Binding ClearOllamaLogCommand}"
                            Padding="12,6"
                            Background="{StaticResource SubTextBrush}"
                            Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="필터:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding OllamaLogFilter, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center"
                                 ToolTip="포함 문자열 필터"/>
                        <CheckBox Grid.Column="2" Content="자동 스크롤"
                                  IsChecked="{Binding OllamaLogAutoScroll}"
                                  VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                    <TextBox Grid.Row="1"
                             x:Name="OllamaLogTextBox"
                             Text="{Binding OllamaLogText}"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"
                             Background="#0F1419"
                             Foreground="#D6E3F3"
                             BorderThickness="0"
                             Padding="8"
                             TextChanged="OnOllamaLogTextChanged"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 학습 데이터셋 생성 섹션 -->
        <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
            <StackPanel>
                <TextBlock Text="조합 기반 데이터셋 생성" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,16"/>

                <TextBlock Text="플레이 없이 나이/기분/호감도/성격 조합으로 학습 데이터를 자동 생성합니다."
                           Foreground="{StaticResource SubTextBrush}" Margin="0,0,0,12"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="고양이 이름:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding GeneratorCatName}" Margin="0,0,16,0"/>

                    <TextBlock Grid.Column="2" Text="생성 목표 (개):" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="3" Text="{Binding GeneratorTargetCount}"/>

                    <TextBlock Grid.Row="1" Text="저장 경로:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                             Text="{Binding GeneratorOutputPath}" Margin="0,8,0,0" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <Button Content="저장 경로 선택"
                            Command="{Binding SelectGeneratorOutputCommand}"
                            Padding="12,6" Margin="0,0,8,0"
                            Background="{StaticResource SubTextBrush}"
                            Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    <Button Content="학습 데이터셋 생성 (dataset.jsonl)"
                            Command="{Binding GenerateDatasetCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="테스트셋 생성 (testset.jsonl)"
                            Command="{Binding GenerateTestSetCommand}"
                            Padding="12,6"
                            Background="#4A90D9"
                            Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>

                <!-- 생성 결과 -->
                <Border Background="#F8F8F8" CornerRadius="6" Padding="12" MinHeight="80">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                        <TextBlock Text="{Binding GeneratorResult}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
                    </ScrollViewer>
                </Border>

                <Separator Margin="0,16"/>

                <!-- 조합 정보 -->
                <TextBlock Text="조합 변수 정보" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
