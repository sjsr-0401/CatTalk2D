<Application x:Class="CatLogAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:CatLogAnalyzer.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- 컨버터 -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

            <!-- 색상 팔레트 -->
            <Color x:Key="PrimaryColor">#FF6B35</Color>
            <Color x:Key="SecondaryColor">#F7C59F</Color>
            <Color x:Key="BackgroundColor">#FFFBF5</Color>
            <Color x:Key="CardColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#2D3436</Color>
            <Color x:Key="SubTextColor">#636E72</Color>

            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
            <SolidColorBrush x:Key="SubTextBrush" Color="{StaticResource SubTextColor}"/>

            <!-- 차트 색상 -->
            <Color x:Key="AffectionColor">#E17055</Color>
            <Color x:Key="HungerColor">#FDCB6E</Color>
            <Color x:Key="StressColor">#D63031</Color>
            <Color x:Key="EnergyColor">#00B894</Color>
            <Color x:Key="FunColor">#6C5CE7</Color>

            <!-- 버튼 스타일 -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF8B55"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- 카드 스타일 -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
